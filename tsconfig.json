{
  "compilerOptions": {
    "target": "esnext",
    "noUnusedLocals": false,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/typings/**/*.d.ts",
    "vite.config.*",
    "components.d.ts",
    "auto-imports.d.ts",
  ],
  "exclude": [
		"/dist/**",
		"node_modules"
	],
}
